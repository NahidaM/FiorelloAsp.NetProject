@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categories</h4> 
            <a asp-controller="Category" asp-action="Create" class="btn btn-success">Create new category</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Category Name
                            </th>
                            <th>
                               Settings
                            </th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category c in Model) 
                        {
                            <tr> 
                                <td>
                                    @c.Name
                                </td>
                                <td>
                                    <a class="btn btn-warning" asp-controller="Category" asp-action="Detail" asp-route-id="@c.Id"><i class="mdi mdi-information"></i></a>
                                    <a class="btn btn-success"asp-controller="Category" asp-action="Update" asp-route-id="@c.Id"><i class="mdi mdi-table-edit"></i></a>
                                    <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@c.Id"><i class="mdi mdi-delete"></i></a>
                                </td> 
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

